            </section>
        </section> 
        <section class="sectionProductosCarrito">
            <div class="fotoProducto">
                <img src="/img/COLCHONETA.PNG"> 
            </div>
            <section class="descripcionProducto">
                <section class="precioDescripcionProducto">
                    <ul>
                        <li>COLCHONETA</li>
                        <li>Precio: AR$ 6500</li>
                    </ul>
                </section>
            </section>
            <br>
            <section class="cantidadYvalorProducto">
                <ul>
                    <li><button><i id="restar" class="fa-solid fa-minus"></i></button>   Cantidad: 1   <button><i id="sumar" class="fa-solid fa-plus"></i></button></li>
                    <li>Total: AR$ 6.500</li>  
